{% extends 'base.html.twig' %}

{% block title %}
  Car
{% endblock %}

{% block body %}
  <div class="container p-5 w-50">
    <h1>{{ car.name }}</h1>
    <table class="table mt-4">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ car.id }}</td>
        </tr>
        <tr>
          <th>NbSeats</th>
          <td>{{ car.nbSeats }}</td>
        </tr>
        <tr>
          <th>NbDoors</th>
          <td>{{ car.nbDoors }}</td>
        </tr>
        <tr>
          <th>Cost</th>
          <td>{{ car.cost }}</td>
        </tr>
      </tbody>
    </table>

    <div class="d-flex justify-content-between mt-3">
      <a href="{{ path('app_car_index') }}" class="btn btn-sm btn-warning my-1 text-white">Back to list</a>

      <a href="{{ path('app_car_edit', { id: car.id }) }}" class="btn btn-sm btn-success my-1 text-white">Edit</a>

      {{ include('car/_delete_form.html.twig') }}
    </div>
  </div>
{% endblock %}
