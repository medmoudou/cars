{% extends 'base.html.twig' %}

{% block title %}
  Home page - Cars
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
  </style>

  <div class="">
    <nav class="navbar navbar-expand-lg navbar-light bg-light ps-5">
      <a class="navbar-brand" href="#">Cars</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/admin">Admin panel</a>
          </li>
        </ul>
        <span class="navbar-text pe-5">Paris Weather {{ temperature }}Â°C</span>
      </div>
    </nav>
    <div class="container pt-5">
      <div>
        <form action="" method="get">
          <div class="row mx-auto w-50">
            <div class="col-6">
              <label for="">Search by name:</label>
              <input class="form-control" type="text" name="q" placeholder="Car name" />
            </div>
            <div class="col-6">
              <label for="">Search by category:</label>
              <select class="form-control" name="c">
                <option disabled selected>Category</option>
                {% for category in categories %}
                  <option value="{{ category.id }}">{{ category.name }}</option>
                {% endfor %}
              </select>
            </div>
            <input type="submit" class="mt-3 btn btn-info text-white w-25 mx-auto" value="Search" />
          </div>
        </form>
      </div>
      <div class="row mt-3">
        {% for car in cars %}
          <div class="col-4 my-3">
            <div class="container bg-light border shadow-sm rounded p-4">
              <div class="d-flex my-3 justify-content-between">
                <p class="m-0">
                  Name : <strong>{{ car.name }}</strong>
                </p>
                <span class="bg-info px-3 text-white">{{ car.category.name }}</span>
              </div>
              <div class="d-flex my-3">
                <p class="m-0">
                  Number of seats : <strong>{{ car.nbSeats }}</strong>
                </p>
              </div>
              <div class="d-flex my-3">
                <p class="m-0">
                  Number of doors : <strong>{{ car.nbDoors }}</strong>
                </p>
              </div>
              <div class="d-flex my-3">
                <p class="m-0">
                  Cost : <strong>{{ car.cost }} $</strong>
                </p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {# display navigation #}
      <div class="navigation mb-5">{{ knp_pagination_render(cars) }}</div>
    </div>
  </div>
{% endblock %}
